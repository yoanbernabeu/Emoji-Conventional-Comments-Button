{
  "name": "Emoji Conventional Comments Button",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "An extension to quickly add conventional comments",
  "homepage_url": "https://conventionalcomments.org/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "action": {},
  "options_ui": {
    "page": "src/options.html"
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*/"
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}
